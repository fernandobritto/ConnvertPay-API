{
  "name": "connvertpay-api",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "ConnvertPay API",
  "scripts": {
    "build": "nest build",
    "localhost": "nest start --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "debug": "nest start --debug --watch",
    "start": "node dist/src/main --max-old-space-size=4096",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jestcov --erage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest -c ./test/config/jest-unit.config.ts --maxWorker=50% --detectOpenHandles --runInBand --colors --forceExit --logHeapUsage --passWithNoTests",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node -r ts-node/register -r dotenv/config ./node_modules/typeorm/cli.js",
    "typeorm:sync": "pnpm typeorm schema:sync -d src/adapters/outbound/database/typeorm-data-source.ts",
    "typeorm:drop": "pnpm typeorm schema:drop -d src/adapters/outbound/database/typeorm-data-source.ts",
    "typeorm:reset": "pnpm typeorm:drop && pnpm typeorm:sync",
    "migration:create": "npx typeorm-ts-node-esm migration:create",
    "migration:run": "pnpm build && pnpm typeorm migration:run -d src/adapters/outbound/database/typeorm-data-source.ts",
    "migration:generate": "pnpm build && pnpm typeorm migration:generate -d src/adapters/outbound/database/typeorm-data-source.ts",
    "migration:revert": "pnpm build && pnpm typeorm migration:revert -d src/adapters/outbound/database/typeorm-data-source.ts",
    "seed:config": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js -d src/adapters/outbound/database/typeorm-data-source.ts config ",
    "seed:run": "ts-node -r tsconfig-paths/register src/adapters/outbound/database/seeding/run-seed.ts",
    "schema:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop -d src/adapters/outbound/database/typeorm-data-source.ts",
    "schema:sync": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:sync -d src/infra/database/typeorm-data-source.ts",
    "arch:validate": "dependency-cruiser src --validate dependency-cruiser.js",
    "arch:graph": "dependency-cruiser src --output-type dot | dot -T svg > architecture-graph.svg",
    "arch:report": "dependency-cruiser src --output-type html --validate dependency-cruiser.js --output-to architecture-report.html",
    "arch:check": "pnpm arch:validate && echo 'âœ… Architecture validation passed!'",
    "arch:full": "pnpm arch:validate && pnpm arch:graph && pnpm arch:report"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/typeorm": "^11.0.0",
    "@types/geojson": "^7946.0.16",
    "archiver": "^7.0.1",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "firebase-admin": "^13.3.0",
    "geojson": "^0.5.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "pg": "^8.13.1",
    "pg-mem": "^3.0.4",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/aws-sdk": "^2.7.4",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dependency-cruiser": "^16.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
